<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECEEF9"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/vector"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_margin="8dp"
        android:layout_marginStart="16dp"
        android:padding="14dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#2E3764" />

    <TextView
        android:id="@+id/today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add meals"
        android:textStyle="bold"
        android:textColor="#2E3764"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="@id/vector"
        app:layout_constraintBottom_toBottomOf="@id/vector"
        app:layout_constraintStart_toEndOf="@id/vector" />

    <View
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/inputs"
        app:layout_constraintTop_toBottomOf="@id/vector"/>

    <TextView
        android:id="@+id/tv_cooked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recently cooked"
        android:textStyle="bold"
        android:textColor="#2E3764"
        android:textSize="20sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/search"
        app:layout_constraintStart_toStartOf="@id/search"
        app:layout_constraintStart_toEndOf="@id/vector" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_cooked"
        app:layout_constraintBottom_toBottomOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/frame_1"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/frame_2"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/frame_3"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/frame_4"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/frame_5"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_marginVertical="8dp"
            android:background="@drawable/frame_6"/>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>